<div class="wrapper">
  <div class="main contents">
    <h2>新着情報</h2>
      <% @posts.each do |post| %>
        <div class="contents row">
          <h3><%= post.title %></h3>
          <p><%= post.body %></p>
        </div>
      <% end %>
    <p><%= paginate(@posts) %></p>
  </div>
  <div class="side contents">
    <h3>ダウンロードページ</h3>
    <p>最新のソフトダウンロードなどはこちら</p>
      <a href="" class="btn-gradient-flat">ダウンロードページ</a>
  </div>
</div>