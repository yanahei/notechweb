<div class="contents row">
  <div class="container">
    <h4>ログイン</h4>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email,class: "shadow-sm form-control", autofocus: true, autocomplete: "email", placeholder: "example@xxx.com" %>
      </div>
    
      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, class: "shadow-sm form-control", autocomplete: "current-password",  placeholder: "password" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :ログイン情報を記憶する %>
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-info" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>