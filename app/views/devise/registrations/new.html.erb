<div class="contents row">
  <div class="container">
    <h4>新規会員登録</h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="form-group">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, class: "shadow-sm form-control", autofocus: true, autocomplete: "email", placeholder: "example@xxx.com" %>
      </div>
    
      <div class="form-group">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(英数字<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, class: "shadow-sm form-control", autocomplete: "new-password", placeholder: "password" %>
      </div>
    
      <div class="form-group">
        <%= f.label :パスワード（確認） %><br />
        <%= f.password_field :password_confirmation, class: "shadow-sm form-control", autocomplete: "new-password",placeholder: "password_confirmation" %>
      </div>
      
      <div class="form-group">
        <%= f.label :名前 %><br />
        <%= f.text_field :name, class: "shadow-sm form-control", autocomplete: "name", placeholder: "name" %>
      </div>
      
      <div class="form-group">
        <%= f.label :所在地 %><br />
        <%= f.text_field :address, class: "shadow-sm form-control", autocomplete: "address", placeholder: "address" %>
      </div>
    
        <%= f.submit "登録する", class: "btn btn-info" %>
    
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>